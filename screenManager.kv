#:import Snackbar kivymd.uix.snackbar.Snackbar

<CustomSnackbar>
    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon
        opposite_colors: True
    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 'ffffff'
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

<MainLayout>:
    screen_manager: screen_manager1
    ScreenManager:
        id: screen_manager1

        Screen:
            id: login_screen
            name: "login_screen"

            MDBoxLayout:
                orientation: 'vertical'
                padding: "130dp"
                spacing: "20dp"
                MDLabel:
                    text: "Login Screen"
                    halign: "center"
                MDTextField:
                    id: log_username
                    hint_text: "username"
                MDTextField:
                    id: log_password
                    hint_text: "password"
                    password: True
                MDRoundFlatButton:
                    text:"Sign In"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5}
                    on_press: root.login()
                    #root.slide("dashboard_screen","left")
                        #screen_manager1.current = "dashboard_screen"
                        #screen_manager1.transition.direction = "left"
                MDRoundFlatButton:
                    text:"Register Here"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5}
                    on_press: root.slide("reg_screen","up")
                        #screen_manager1.current = "reg_screen"
                        #screen_manager1.transition.direction = "up"

        
        Screen:
            id: registration_screen
            name: "reg_screen"
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: "130dp"
                spacing: "20dp"
                MDLabel:
                    text: "Registration Screen"
                    halign: "center"
                MDTextField:
                    id: username
                    hint_text: "username"
                MDTextField:
                    id: firstname
                    hint_text: "First Name"
                MDTextField:
                    id: lastname
                    hint_text: "Last Name"
                MDTextField:
                    id: email
                    hint_text: "Email"
                    validator: 'email'
                    helper_text: 'email format required'
                    helper_text_mode: 'on_error'
                MDTextField:
                    id: password
                    hint_text: "password"
                    password: True
                MDRoundFlatButton:
                    text:"Sign Up"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5, "y": 0.5}
                    on_press: root.register()
                    #root.slide("login_screen","right")
                        #screen_manager1.current = "login_screen"
                        #screen_manager1.transition.direction = "right"

